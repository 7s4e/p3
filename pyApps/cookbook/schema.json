{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://example.com/schemas/recipe.json",
  "title": "Recipe",
  "description": "Adapted from schema.org/Recipe.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the recipe."
    },
    "description": {
      "type": "string",
      "description": "A description of the recipe."
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "An image URL; use `file://` for local files."
    },
    "author": {
      "type": "string",
      "description": "The author of the recipe."
    },
    "datePublished": {
      "type": "string",
      "format": "date",
      "description": "The date the recipe was published."
    },
    "recipeCategory": {
      "type": "string",
      "description": "The category of the recipe (e.g. 'Dessert')."
    },
    "recipeCuisine": {
      "type": "string",
      "description": "The cuisine of the recipe (e.g. 'Italian')."
    },
    "prepTime": {
      "type": "string",
      "format": "duration",
      "description": "The time it takes to prepare the recipe."
    },
    "cookTime": {
      "type": "string",
      "format": "duration",
      "description": "The time it takes to cook the recipe."
    },
    "totalTime": {
      "type": "string",
      "format": "duration",
      "description": "The total time to prepare and cook the recipe."
    },
    "recipeYield": {
      "type": "object",
      "description": "The quantity produced by the recipe (e.g. '4 servings').",
      "properties": {
        "quantity": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        }
      },
      "required": ["quantity", "unit"]
    },
    "recipeIngredient": {
      "type": "object",
      "description": "An ingredient used in the recipe.",
      "properties": {
        "quantity": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "ingredient": {
          "type": "string"
        }
      },
      "required": ["ingredient"]
    },
    "recipeIngredients": {
      "type": "array",
      "description": "A list of ingredients used in the recipe.",
      "items": {
        "type": "string",
        "$ref": "#/recipeIngredient"
      }
    },
    "recipeInstructions": {
      "type": "array",
      "description": "A list of instructions for making the recipe.",
      "items": {
        "type": "string"
      }
    },
    "aggregateRating": {
      "type": "object",
      "description": "An aggregate rating for the recipe.",
      "properties": {
        "ratingValue": {
          "type": "number",
          "description": "The average rating (for example, 4.5)."
        },
        "reviewCount": {
          "type": "number",
          "description": "The number of reviews."
        }
      },
      "required": ["ratingValue", "reviewCount"]
    },
    "nutrition": {
      "type": "object",
      "description": "Nutritional information about the recipe.",
      "properties": {
        "calories": {
          "type": "string",
          "description": "The number of calories (for example, '250 kcal')."
        },
        "fatContent": {
          "type": "string",
          "description": "The amount of fat (for example, '10 g')."
        },
        "carbohydrateContent": {
          "type": "string",
          "description": "The amount of carbohydrates (for example, '30 g')."
        },
        "proteinContent": {
          "type": "string",
          "description": "The amount of protein (for example, '5 g')."
        }
      },
      "required": ["calories"]
    },
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "The JSON-LD context. Must be 'https://schema.org'."
    },
    "@type": {
      "type": "string",
      "const": "Recipe",
      "description": "The type of item. Must be 'Recipe'."
    }
  },
  "required": [
    "@context",
    "@type",
    "name",
    "recipeIngredient",
    "recipeInstructions"
  ]
}
